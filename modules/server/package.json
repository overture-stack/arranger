{
	"name": "@overture-stack/arranger-server",
	"description": "GraphQL Server",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"arranger-server": "./index.js"
	},
	"imports": {
		"#*": "./src/*"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc --project tsconfig.release.json",
		"dev": "NODE_ENV=development tsx watch --include './src/**/*' ./index.ts",
		"nuke:dist": "rm -rf dist",
		"patchTS": "ts-patch install -s",
		"prepare": "npm run patchTS",
		"start": "tsx ./index.ts",
		"test": "tsx --test",
		"test:watch": "npm test -- --watch",
		"watch": "npm run nuke:dist && npm run build -- --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/overture-stack/arranger.git"
	},
	"bugs": {
		"url": "https://github.com/overture-stack/arranger/issues"
	},
	"homepage": "https://github.com/overture-stack/arranger#readme",
	"dependencies": {
		"@elastic/elasticsearch": "^7.17.14",
		"@graphql-tools/schema": "^9.0.17",
		"apollo-server": "^3.10.3",
		"apollo-server-core": "^3.10.3",
		"apollo-server-express": "^3.10.3",
		"axios": "^1.7.9",
		"chalk": "^2.3.1",
		"convert-units": "^2.3.4",
		"cors": "^2.8.5",
		"date-fns": "^2.29.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"graphql": "^16.6.0",
		"graphql-fields": "^2.0.3",
		"graphql-middleware": "^6.1.33",
		"graphql-playground-html": "^1.6.30",
		"graphql-playground-middleware-express": "^1.7.23",
		"graphql-scalars": "^1.20.4",
		"graphql-type-json": "^0.3.2",
		"jsonpath-plus": "^10.3.0",
		"lodash-es": "^4.17.21",
		"morgan": "^1.10.0",
		"paralleljs": "^1.1.0",
		"qew": "^0.11.1",
		"ramda": "^0.28.0",
		"tar-stream": "^2.2.0",
		"through2": "^4.0.2",
		"tslib": "^2.5.0",
		"url-join": "^4.0.1",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.0",
		"@types/convert-units": "^2.3.5",
		"@types/graphql-fields": "^1.3.4",
		"@types/jest": "^29.5.0",
		"@types/lodash": "^4.14.191",
		"@types/lodash-es": "^4.17.12",
		"@types/morgan": "^1.9.4",
		"@types/paralleljs": "^0.0.24",
		"@types/tar-stream": "^2.2.2",
		"@types/url-join": "^4.0.1",
		"@types/uuid": "^9.0.1",
		"jest": "^29.5.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.4.2",
		"ts-jest": "^29.0.5",
		"ts-patch": "^3.3.0",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2",
		"typescript-transform-paths": "^3.5.3"
	},
	"overrides": {
		"glob-parent": "^5.1.2",
		"minimist": "^1.2.6"
	},
	"type": "module",
	"version": "3.0.0-rc.1"
}
