{
  "name": "@overture-stack/arranger-server",
  "version": "3.0.0-beta.15",
  "description": "GraphQL Server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arranger-server": "./index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "babel src --extensions .ts,.js  --ignore */**/__tests__ --out-dir dist",
    "cleanDist": "rm -rf dist",
    "declarations": "ttsc --emitDeclarationOnly",
    "ifPublish:declarations": "if test \"$PUBLISH_DECLARATIONS\" = \"true\" ; then (npm run -s declarations || true) ; fi",
    "prepare": "npm run cleanDist && npm run build && npm run ifPublish:declarations",
    "start": "NODE_ENV=development nodemon index.js -e js,ts",
    "start:prod": "node index.js",
    "test": "jest",
    "watch": "npm run cleanDist && (npm run build -- --watch & npm run declarations -- --watch)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overture-stack/arranger.git"
  },
  "author": "OICR",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/overture-stack/arranger/issues"
  },
  "homepage": "https://github.com/overture-stack/arranger#readme",
  "dependencies": {
    "@elastic/elasticsearch": "^7.17.0",
    "@graphql-tools/schema": "^9.0.13",
    "apollo-server": "^3.10.3",
    "apollo-server-core": "^3.10.3",
    "apollo-server-express": "^3.10.3",
    "axios": "^0.27.2",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.3.1",
    "convert-units": "^2.3.4",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-fields": "^2.0.3",
    "graphql-middleware": "^6.1.33",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-scalars": "^1.19.0",
    "graphql-tools": "8.3.8",
    "graphql-type-json": "^0.3.2",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "paralleljs": "^1.1.0",
    "qew": "^0.11.1",
    "ramda": "^0.28.0",
    "tar-stream": "^2.2.0",
    "through2": "^4.0.2",
    "tslib": "^2.4.1",
    "url-join": "^4.0.1",
    "uuid": "^9.0.0",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@babel/runtime": "^7.20.13",
    "@types/convert-units": "^2.3.5",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^29.2.6",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.4",
    "@types/paralleljs": "0.0.21",
    "@types/tar-stream": "^2.2.2",
    "@types/url-join": "^4.0.1",
    "@types/uuid": "^8.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.6"
  },
  "overrides": {
    "glob-parent": "^5.1.2",
    "minimist": "^1.2.6"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "dist"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "verbose": true
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
