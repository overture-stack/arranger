{
  "name": "@arranger/server",
  "version": "0.5.8",
  "description": "GraphQL Server",
  "main": "dist/index.js",
  "bin": {
    "arranger-server": "./index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start":
      "DEPS=`node getDependencies.js` && cd .. && nodemon $DEPS server/index.js",
    "run-prod": "node index.js",
    "prepare":
      "rm -rf dist && mkdir dist && babel src --ignore */**/__tests__ --out-dir dist",
    "test": "jest",
    "watch": "rm -rf dist && mkdir dist && babel src --watch --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overture-stack/arranger.git"
  },
  "author": "OICR",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/overture-stack/arranger/issues"
  },
  "homepage": "https://github.com/overture-stack/arranger#readme",
  "dependencies": {
    "@arranger/mapping-utils": "^0.5.8",
    "@arranger/middleware": "^0.5.8",
    "@arranger/schema": "^0.5.8",
    "apollo-server-express": "^1.3.1",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.1",
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "dotenv": "^5.0.0",
    "elasticsearch": "^14.0.0",
    "express": "^4.16.2",
    "graphql": "^0.11.0",
    "jsonpath": "^1.0.0",
    "node-fetch": "^2.0.0",
    "tar-stream": "^1.5.5",
    "through2": "^2.0.3",
    "url-join": "^4.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.40",
    "@babel/core": "7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.40",
    "@babel/plugin-proposal-optional-chaining": "7.0.0-beta.40",
    "@babel/preset-env": "7.0.0-beta.40",
    "@babel/register": "7.0.0-beta.40",
    "jest": "^22.3.0",
    "nodemon": "^1.18.4"
  },
  "jest": {
    "testURL": "http://localhost/"
  }
}
