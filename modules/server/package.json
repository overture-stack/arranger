{
	"name": "@overture-stack/arranger-server",
	"version": "3.0.0-beta.22",
	"description": "GraphQL Server",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"arranger-server": "./index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc --build",
		"cleanDist": "rm -rf dist",
		"patchTS": "ts-patch install -s",
		"prepare": "npm run patchTS & npm run cleanDist && npm run build",
		"start": "NODE_ENV=development nodemon -e js,json,ts index.ts",
		"start:prod": "ts-node index.ts",
		"test": "jest",
		"watch": "npm run cleanDist && npm run build -- --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/overture-stack/arranger.git"
	},
	"author": "OICR",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/overture-stack/arranger/issues"
	},
	"homepage": "https://github.com/overture-stack/arranger#readme",
	"dependencies": {
		"@elastic/elasticsearch": "^7.17.0",
		"@graphql-tools/schema": "^9.0.17",
		"apollo-server": "^3.10.3",
		"apollo-server-core": "^3.10.3",
		"apollo-server-express": "^3.10.3",
		"axios": "^0.27.2",
		"chalk": "^2.3.1",
		"convert-units": "^2.3.4",
		"cors": "^2.8.5",
		"date-fns": "^2.29.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"graphql": "^16.6.0",
		"graphql-fields": "^2.0.3",
		"graphql-middleware": "^6.1.33",
		"graphql-playground-middleware-express": "^1.7.23",
		"graphql-scalars": "^1.20.4",
		"graphql-type-json": "^0.3.2",
		"jsonpath": "^1.1.1",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"paralleljs": "^1.1.0",
		"qew": "^0.11.1",
		"ramda": "^0.28.0",
		"tar-stream": "^2.2.0",
		"through2": "^4.0.2",
		"tslib": "^2.5.0",
		"url-join": "^4.0.1",
		"uuid": "^9.0.0",
		"zlib": "^1.0.5"
	},
	"devDependencies": {
		"@types/convert-units": "^2.3.5",
		"@types/graphql-fields": "^1.3.4",
		"@types/jest": "^29.5.0",
		"@types/lodash": "^4.14.191",
		"@types/morgan": "^1.9.4",
		"@types/paralleljs": "0.0.21",
		"@types/tar-stream": "^2.2.2",
		"@types/url-join": "^4.0.1",
		"@types/uuid": "^9.0.1",
		"jest": "^29.5.0",
		"nodemon": "^2.0.21",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"typescript-transform-paths": "^3.4.6"
	},
	"overrides": {
		"glob-parent": "^5.1.2",
		"minimist": "^1.2.6"
	},
	"jest": {
		"maxWorkers": "20%",
		"modulePathIgnorePatterns": [
			"dist"
		],
		"testEnvironmentOptions": {
			"url": "http://localhost/"
		},
		"transform": {
			"^.+\\.[jt]sx?$": [
				"ts-jest"
			]
		},
		"verbose": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
