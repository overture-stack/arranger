{
  "name": "@arranger/schema",
  "version": "2.6.1",
  "description": "GraphQL Schema for Data Portals",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "rm -rf dist && mkdir dist && babel src --out-dir dist",
    "watch": "rm -rf dist && mkdir dist && babel src --watch --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overture-stack/arranger.git"
  },
  "author": "OICR",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/overture-stack/arranger/issues"
  },
  "homepage": "https://github.com/overture-stack/arranger#readme",
  "peerDependencies": {
    "graphql": "^14.5.3"
  },
  "dependencies": {
    "@arranger/mapping-utils": "^2.6.1",
    "@arranger/middleware": "^2.6.1",
    "babel-polyfill": "^6.26.0",
    "graphql-middleware": "1.3.1",
    "graphql-scalars": "^0.1.5",
    "graphql-tools": "^4.0.0",
    "graphql-type-json": "^0.2.1",
    "kind-of": "^6.0.3",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "paralleljs": "^0.2.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "graphql": "^14.5.3",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
